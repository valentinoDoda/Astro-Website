---
import MenuElement from "../../components/MenuElement.astro";
---

<header>
  <nav>
    <div class="logo">
      <p><a href="/#">Website Tech Albania</a></p>
    </div>
    <div class="hamburge-btn">
      <button id="toggleMenu">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          viewBox="0 0 16 16"
          ><!-- Icon from Charm Icons by Jay Newey - https://github.com/jaynewey/charm-icons/blob/main/LICENSE -->
          <path
            fill="none"
            stroke="#ffd34d"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M2.75 12.25h10.5m-10.5-4h10.5m-10.5-4h10.5"></path></svg
        >
      </button>
    </div>
    <MenuElement pages={["rreth Nesh", "shërbimet", "projektet", "kontakti"]} />
  </nav>
</header>

<style>
  p a {
    font-family: var(--logo-font);
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--logo-color);
  }
  nav {
    position: relative;
    display: grid;
    grid-template-columns: auto auto;
    gap: 1.5rem;
    padding: 1rem 0;
    align-items: center;
    justify-content: space-between;
  }
  .hamburge-btn {
    display: none;
  }
  header {
    overflow: visible;
    z-index: 1;
    margin: 0;
    position: fixed;
    top: 0;
    left: 50%;
    border-radius: 4px;
    box-shadow: 0px -2px 10px black;
    transform: translateX(-50%);
    width: 100%;
    background-color: var(--main-bg);
  }
  .hamburge-btn button {
    cursor: pointer;
    font-size: 1.5rem;
    color: var(--logo-color);
  }
  button {
    padding: 0 !important;
    border: none;
    background: none;
  }
  @media (max-width: 970px) {
    .hamburge-btn {
      display: block;
    }
  }
</style>

<script>
  const btn = document.querySelector(".hamburge-btn") as HTMLButtonElement;
  const menu = document.querySelector(".menu") as HTMLElement;
  btn.addEventListener("click", function () {
    menu.classList.toggle("show");
  });

  // Κλείσιμο του μενού αν ο χρήστης κάνει κλικ οπουδήποτε αλλού στη σελίδα
  menu.addEventListener("click", (e: Event) => {
    (menu as HTMLElement).classList.toggle("show");
  });
</script>
